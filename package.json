{
  "name": "mailguard",
  "version": "0.1.0",
  "description": "Privacy-first phishing detection browser extension",
  "type": "module",
  "scripts": {
    "dev": "npm run ext:dev & npm run backend:dev",
    "ext:dev": "cd extension && vite",
    "ext:build": "cd extension && vite build",
    "build": "npm run ext:build && npm run backend:build",
    "backend:dev": "cd backend && tsx watch src/server.ts",
    "backend:build": "cd backend && tsc",
    "backend:start": "cd backend && node dist/server.js",
    "test": "npm run test:unit && npm run test:heuristics",
    "test:unit": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:heuristics": "jest extension/src/heuristics --coverage",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist/ extension/dist backend/dist coverage/ node_modules package-lock.json"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.16",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
